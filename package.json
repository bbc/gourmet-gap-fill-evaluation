{
  "name": "gourmet-gap-fill-evaluation",
  "version": "1.0.0",
  "description": "Evaluate the quality of translation using fill in the gap",
  "author": "susiecoleman",
  "license": "UNLICENSED",
  "main": "./dist/app.js",
  "scripts": {
    "start": "node .",
    "build": "tsc",
    "lint": "tslint --project tsconfig.json",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/app.ts",
    "spec": "speculate --release ${BUILD_NUMBER}",
    "test": "yarn jest",
    "valid": "yarn lint && yarn build"
  },
  "dependencies": {
    "aws-sdk": "^2.513.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "hbs": "^4.0.4",
    "typescript": "^3.5.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "@types/uuid": "^3.4.5",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "speculate": "^2.1.0",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "spec": {
    "requires": [
      "cloud-httpd24-ssl-no-certs"
    ],
    "executable": [
      "./bake-scripts/*"
    ],
    "post": [
      "mkdir -p /etc/bake-scripts/gourmet-gap-fill-evaluation",
      "cp -rf /usr/lib/gourmet-gap-fill-evaluation/bake-scripts/* /etc/bake-scripts/gourmet-gap-fill-evaluation/"
    ]
  }
}
